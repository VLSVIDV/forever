                                    use(xlink:href='images/sprite/sprite.svg#arrow-btn')
                td.basket__total $ 24.50
            tr
                td.basket__image
                    img(src="images/basket-3.png")
                td.basket__name Lorem ipsum dolor sit
                td.basket__price $ 170.00
                td.basket-quan
                    .basket-quan__number 1
                    .basket-quan__buttons
                        button.basket__btn.basket__btn_plus
                            i
                                svg.icon.icon-basket
                                    use(xlink:href='images/sprite/sprite.svg#arrow-btn')
                        button.basket__btn.basket__btn_minus
                            i
                                svg.icon.icon-basket.icon-down
                                    use(xlink:href='images/sprite/sprite.svg#arrow-btn')
